<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.IncarcarePaletiActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="50px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="270px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="left"
            android:text="Client:"
            android:textSize="19sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="50px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="270px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="left"
            android:text="De la:"
            android:textSize="19sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textSursa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="left"
            android:textSize="19sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLipsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Lipsa"
            android:layout_marginRight="5dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="50px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="270px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="left"
            android:text="La:"
            android:textSize="19sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textDestinatie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="270px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="left"
            android:textSize="19sp"
            android:text = "Material:"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textMaterialCod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/artScanOk"
            android:layout_width="25dp"
            android:layout_marginLeft="200px"
            android:layout_height="25dp"
            android:src="@drawable/ok_icon"
            android:visibility="invisible"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="270px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="left"
            android:textSize="19sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textMaterialNume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="270px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="left"
            android:textSize="19sp"
            android:text = "Cantitate:"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textCantUmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="270px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="left"
            android:textSize="19sp"
            android:text = "Nr. paleti:"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textPaleti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="270px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="left"
            android:textSize="19sp"
            android:text = "Valabil:"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textValabil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelScan"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:gravity="left"
            android:textSize="19sp"
            android:text = "Scan preluare:"
            android:typeface="serif" />

        <EditText
            android:id="@+id/textScan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="19sp"

            />
    </LinearLayout>

    <Button
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonScan"
        android:layout_margin="40px"
        android:padding="20px"
        android:text = "Scaneaza"
        android:textSize="22sp"/>

</LinearLayout>